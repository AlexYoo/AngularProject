<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hist.demo.mapper.StoreMapper">

	<insert id="insertStore" parameterType="com.hist.demo.vo.Store">
		INSERT INTO STORE 
		(
			NAME,
			REG_ID,
			UPT_ID
		)
		VALUES 
		(
			#{name},
			#{regId},
			#{uptId}
		)
	</insert>
	
	<update id="updateStore" parameterType="com.hist.demo.vo.Store">
		UPDATE STORE
		SET 
		uptId = #{uptId}
		,uptDtm = now()
		<if test="address != null and address != ''">
		, ADDRESS = #{address}
		</if>
		<if test="name != null and name != ''">
		, NAME = #{name}
		</if>		
		WHERE ID = #{id}
	</update>
	
		
</mapper>